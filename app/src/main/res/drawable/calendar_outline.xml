<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Outline -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:color="#000000"
                android:width="2dp" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list>